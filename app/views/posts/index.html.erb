<div class="container bg-dark-subtle posts-page">
  <%= render 'partials/user', user: @author %>
  
  <% @posts.each do |post| %>
    <a href="/users/<%= post.author.id %>/posts/<%= post.id %>" class="text-decoration-none">
      <div class="mb-3 post">
        <%= render 'partials/post', post: post %>
        <%= render 'partials/comment', comments: post.five_most_recent_comments unless post.five_most_recent_comments.empty? %>
      </div>
    </a>
  <% end %>
  
  <div class="w-90 mt-5 d-flex justify-content-center align-items-center">
    <a href="/users" class="btn bg-white m-1">Back</a>
  </div>
</div>
