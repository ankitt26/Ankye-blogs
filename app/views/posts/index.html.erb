<div class="container bg-dark-subtle posts-page">
<%= link_to(user_path(@author)) do %>
  <button id="back-btn">ðŸ”™</button>
<% end %>
  <%= render 'partials/user', user: @author %>
  
  <% @posts.each do |post| %>
    <a href="/users/<%= post.author.id %>/posts/<%= post.id %>" class="text-decoration-none">
      <div class="mb-3 post">
        <%= render 'partials/post', post: post %>
        <%= render 'partials/comment', comments: post.five_most_recent_comments unless post.five_most_recent_comments.empty? %>
      </div>
    </a>
  <% end %>
  
  <nav>
  <ul class="pagination justify-content-center align-items-center">
      <% (1..@total_pages).each do |page| %>
          <li class="page-item"><a class="btn bg-white m-1" href="/users/<%= @author.id %>/posts?page=<%= page %>"><%= page %></a></li>
      <% end %>
  </ul>
</nav>
</div>
